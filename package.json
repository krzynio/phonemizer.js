{
  "name": "phonemizer",
  "version": "1.3.0",
  "description": "Simple text to phones converter using eSpeak NG (with Polish support)",
  "type": "module",
  "exports": {
    "types": "./types/phonemizer.d.ts",
    "node": {
      "import": "./dist/phonemizer.js",
      "require": "./dist/phonemizer.cjs"
    },
    "default": "./dist/phonemizer.js"
  },
  "scripts": {
    "build": "rm -rf dist types && rollup -c && tsc",
    "prepare": "npm run build",
    "test": "vitest",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krzynio/phonemizer.js.git"
  },
  "keywords": [
    "linguistics",
    "espeak",
    "phoneme",
    "phonemization",
    "polish"
  ],
  "author": "Xenova",
  "contributors": [
    "krzynio"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/krzynio/phonemizer.js/issues"
  },
  "homepage": "https://github.com/krzynio/phonemizer.js#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "prettier": "3.4.2",
    "rollup": "^4.30.1",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "files": [
    "src",
    "data",
    "types",
    "dist",
    "rollup.config.js",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "jsdelivr": "./dist/phonemizer.js",
  "unpkg": "./dist/phonemizer.js"
}
